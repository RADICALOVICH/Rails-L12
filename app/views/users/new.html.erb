<h1 class="mb-4">Регистрация</h1>

<%= form_with model: @user do |form| %>
  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :email%>
    </div>

    <div class = "col-sm-10">
      <%= form.email_field :email, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :name%>
    </div>

    <div class = "col-sm-10">
      <%= form.text_field :name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password_confirmation%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <p><%= form.submit("Зарегистрироваться", id: 'btn', class: 'btn btn-primary') %></p>
<% end %>